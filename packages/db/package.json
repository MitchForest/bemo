{
  "name": "@repo/db",
  "version": "0.0.1",
  "private": true,
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "scripts": {
    "typecheck": "tsc --noEmit",
    "build": "tsc",
    "migrate:make": "kysely migrate make",
    "migrate:up": "tsx src/migrate.ts up",
    "migrate:down": "tsx src/migrate.ts down",
    "migrate:latest": "tsx src/migrate.ts latest",
    "codegen": "kysely-codegen --dialect postgres --out-file ./src/database-types.ts",
    "seed": "tsx src/seed.ts"
  },
  "dependencies": {
    "kysely": "^0.27.4",
    "kysely-postgres-js": "^2.0.0",
    "postgres": "^3.4.5"
  },
  "devDependencies": {
    "kysely-codegen": "^0.17.0",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "@types/node": "^22.10.2"
  }
}
